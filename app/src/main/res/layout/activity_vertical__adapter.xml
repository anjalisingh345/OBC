<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.home.Vertical_Adapter">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="180dp"
       app:cardCornerRadius="5dp"
       android:layout_marginHorizontal="10dp"
       android:layout_marginTop="15dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_margin="10dp"
           android:layout_height="wrap_content">
       <ImageView
           android:layout_width="140dp"
           android:layout_height="150dp"
           android:layout_margin="10dp"
           android:id="@+id/image"
           android:layout_marginHorizontal="10dp"
           android:scaleType="fitXY"
           android:src="@drawable/applogo"></ImageView>



           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="online booking cut hair"
               android:id="@+id/text"
               android:textStyle="bold"
               android:layout_toRightOf="@+id/image"
               android:textSize="15dp"
               android:layout_marginTop="@dimen/margin_10dp"
               android:layout_margin="7dp"
               android:textColor="@color/black"></TextView>


           <TextView
               android:id="@+id/text2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/text"
               android:layout_marginHorizontal="10dp"
               android:layout_toRightOf="@+id/image"
               android:text="piplani,indrepuri"
               android:textColor="@color/black"
               android:textSize="10dp"></TextView>


           <TextView
               android:id="@+id/text3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/text2"


               android:layout_marginHorizontal="10dp"
               android:layout_marginTop="15dp"
               android:layout_toRightOf="@+id/image"
               android:text="rs 400 Male Hair cut"
               android:textColor="@color/black"
               android:textSize="10dp"></TextView>



           <ImageView
               android:id="@+id/location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              android:layout_marginLeft="17dp"
               android:layout_marginTop="10dp"
               android:layout_toRightOf="@+id/text"
               app:srcCompat="@drawable/ic_location_on_black_24dp" />

           <view
               android:layout_width="15dp"
               android:layout_height="2dp"
               android:layout_below="@+id/location"
               android:layout_marginLeft="20dp"
               android:id="@+id/view"
               android:layout_marginTop="0dp"
               android:layout_toRightOf="@+id/text"></view>


           <TextView
               android:id="@+id/text4"
               android:layout_width="51dp"
               android:layout_height="13dp"
               android:layout_below="@+id/view"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginHorizontal="10dp"
               android:layout_marginTop="5dp"
               android:layout_marginEnd="-2dp"
               android:layout_marginRight="-2dp"
               android:text="5.2kms"
               android:textAlignment="viewEnd"
               android:textColor="@color/black"
               android:textSize="10dp" />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#ccc"
               android:id="@+id/view2"
               android:layout_below="@+id/text3"
               android:layout_toRightOf="@+id/image"
               android:layout_margin="@dimen/margin_10dp"></View>

           <TextView
               android:id="@+id/text5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/view2"
               android:layout_margin="10dp"

               android:layout_marginLeft="20dp"
               android:layout_marginTop="14dp"
               android:layout_toRightOf="@+id/image"
               android:text="AMBIENCE RWTING"
               android:textColor="@color/black"
               android:textSize="8dp"></TextView>

           <RatingBar
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/text5"
               android:layout_toRightOf="@+id/image"
               android:scrollbarSize="@dimen/margin_10dp"></RatingBar>

       </RelativeLayout>


   </androidx.cardview.widget.CardView>
</LinearLayout>